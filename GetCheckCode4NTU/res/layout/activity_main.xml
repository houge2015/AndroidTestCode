<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.mge.ntu.get_check_code.MainActivity" >

    <EditText
        android:id="@+id/xh_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Number Here"
        android:maxLines="1" />

    <EditText
        android:id="@+id/sfzh_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID Here"
        android:maxLines="1" />

    <EditText
        android:id="@+id/passwd_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PassWord Here"
        android:maxLines="1"
        android:password="true" />

    <EditText
        android:id="@+id/check_code_ed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="CheckCode Here"
        android:maxLines="1" />

    <Button
        android:id="@+id/send_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GET CheckCode" />

    <ImageView
        android:id="@+id/image_vw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher" />

    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/return_data_tx"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nothing Here" />
    </ScrollView>

</LinearLayout>