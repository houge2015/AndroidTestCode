<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.mengge.youthdiary"
    android:versionCode="3"
    android:versionName="3.3.2" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="21" />

    <!-- 往sdcard中写入数据的权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 在sdcard中创建/删除文件的权限 -->
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />
    <!-- 网络访问权限 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_youth_diary"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity android:name=".LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DiaryActivity" />
        <activity android:name=".SettingActivity" />
        <activity android:name=".AboutUsActivity" />
        <activity android:name=".HistoryActivity" />
        <activity android:name=".ViewActivity" />
        <activity android:name=".ChangeActivity" />
        <activity android:name=".WebBroswerActivity" />
    </application>

</manifest>